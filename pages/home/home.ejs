<html lang="en">

<%- include("./components/head.ejs") %>

<body style="justify-content: center">


    <div class="container-fluid text-center m-0 p-0">
        <div class="row align-items-start h-100">

            <section class="pt-4 bg-primary" style="width: 10%; height: 100%">
                <button id="new_conf_btn" type="button" class="btn my-2 btn-secondary" data-bs-toggle="modal" data-bs-target="#create_conference_modal">New conference</button>
            </section>

            <section class="bg-light overflow-y-auto" style="width: 60%; height: 100%">
                <h3><%= email %></h3>
                <ul class="list-group list-group-flush container mt-5 h-100">
                    <% for (var conf in all_conferences) { %>
                        <li onclick="GetConference(<%= all_conferences[conf].CONF_ID %>)" class="list-group-item d-flex justify-content-center align-content-center" style="height: 160px">
                            <div class="col-2 py-5"><%= all_conferences[conf].CONF_ID %></div>
                            <div class="col-5 py-5"><%= all_conferences[conf].CONF_NAME %></div>
                            <div class="col-3 py-5"><%= all_conferences[conf].CONF_MODE %></div>
                        </li>
                    <% } %>
                </ul>
            </section>

            <section class="bg-secondary" style="width: 30%; height: 100%">
                    <p>section C</p>
            </section>
        </div>
    </div>

    <%- include("./components/create_conference_modal.ejs") %>
    <%- include("./components/add_members_modal.ejs") %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>

</body>
</html>